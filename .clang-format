BasedOnStyle: Google
IndentWidth: 3
ColumnLimit: 150  # Increase the line length limit to 120 characters
TabWidth: 3
AccessModifierOffset: -3  # No indentation for access specifiers
UseTab: Never
AllowShortIfStatementsOnASingleLine: false
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: true
  AfterControlStatement: true
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterObjCDeclaration: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  IndentBraces: false
  SplitEmptyFunction: false  # Ensure {} style for empty functions
  SplitEmptyRecord: false    # Ensure {} style for empty structs/classes
  SplitEmptyNamespace: false # Ensure {} style for empty namespaces
PointerAlignment: Left
DerivePointerAlignment: false
AlignConsecutiveAssignments: true
AlignConsecutiveDeclarations: true
AlignOperands: false
AlignTrailingComments: true
AllowShortFunctionsOnASingleLine: None  # Disallow short functions on a single line
AllowShortLoopsOnASingleLine: false
BinPackArguments: true
BinPackParameters: true
BreakBeforeBinaryOperators: None
BreakBeforeTernaryOperators: true
ConstructorInitializerIndentWidth: 2
ContinuationIndentWidth: 4
IndentCaseLabels: true
IndentPPDirectives: None
SortIncludes: true
SortUsingDeclarations: true
SpaceAfterCStyleCast: true
SpaceBeforeParens: ControlStatements
SpacesInAngles: false
SpacesInCStyleCastParentheses: false
SpaceInEmptyParentheses: false
